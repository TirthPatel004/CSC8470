<!-- JavaScript for Counter Animation -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        function animateCounter(id, endValue) {
            let startValue = 0;
            let duration = 2000; // Duration of animation in milliseconds
            let increment = endValue / (duration / 100);
            let counter = document.getElementById(id);

            function updateCounter() {
                startValue += increment;
                if (startValue >= endValue) {
                    startValue = endValue;
                    counter.textContent = Math.floor(endValue);
                    return;
                }
                counter.textContent = Math.floor(startValue);
                requestAnimationFrame(updateCounter);
            }
            updateCounter();
        }

        animateCounter("jobsCounter", 1200);
        animateCounter("companiesCounter", 150);
        animateCounter("applicationsCounter", 3000);
    });
</script>
